@model MVC_Core_Ex1.ViewModels.FlightVM

<h1>Create Flights</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FightNo" class="control-label"></label>
                <input asp-for="FightNo" class="form-control" />
               
            </div>
            <div class="form-group">
                <label asp-for="Fair" class="control-label"></label>
                <input asp-for="Fair" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TravelTime" class="control-label"></label>
                <input asp-for="TravelTime" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SourceCity" class="control-label"></label>
                <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId"></select>
             
            </div>
            <div class="form-group">
                <label asp-for="DestinationCityId" class="control-label"></label>
                <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId1"></select>
            </div>
            <div class="form-group">
                <label asp-for="IsDirect" class="control-label"></label>
                <input asp-for="IsDirect" class="form-control" />
              
            </div>
            <div class="form-group">
                <label asp-for="selectfeature" class="control-label"></label>
                <select asp-for="FacilityId" class="form-control" asp-items="ViewBag.FacilityId" multiple></select>
            </div>
            <div class="form-group">
                <input type="submit" value="SaveFlights" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>